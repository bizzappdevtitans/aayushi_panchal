<?xml version="1.0"?>
<odoo>
<!-- from view -->
 <record id="view_create_student_wizard_form" model="ir.ui.view">
            <field name="name">cancel.student.wizard.from</field>
            <field name="model">cancel.student.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name"/>
                    </group>
                </form>
                <footer>
                    <button name="action_cancel" string="Cancel Student" type="object" class="oe_highlight" data-hotkey="q"/>
                    <button string="Discard" class="btn btn-secondary" special="cancel" data-hotkey="z"/>
                </footer>
            </field>
        </record>

    <record id="action_cancel_student" model="ir.actions.act_window">
        <field name="name">cancel.student.wizard</field>
        <field name="res_model">cancel.student.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>




